<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/img_background_item_playlist_fragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_playlist_fragment"
        android:scaleType="fitXY"
        />
    <View
        android:background="@drawable/custom_banner_background_color"
        android:layout_marginStart="@dimen/marginl_left_item_playlist_fragment"
        android:layout_marginEnd="@dimen/margin_right_item_playlist_fragment"
        android:layout_marginTop="@dimen/margin_top_item_playlist_fragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_playlist_fragment"/>
    <ImageView
        android:id="@+id/img_icon_item_playlist_fragment"
        android:layout_width="@dimen/width_icon_item_playlist_fragment"
        android:layout_height="@dimen/height_icon_item_playlist_fragment"
        android:layout_marginStart="@dimen/margin_start_icon_item_playlist_fragmen"
        android:layout_marginEnd="@dimen/margin_start_icon_item_playlist_fragmen"
        android:layout_marginBottom="@dimen/margin_botton_icon_item_playlist_fragmen"
        android:elevation="@dimen/_6sdp"
        android:layout_alignBottom="@id/img_background_item_playlist_fragment"
        android:scaleType="fitXY"
        />
    <TextView
        android:paddingTop="@dimen/padding_start_play_name_item_playlist_fragmen"
        android:layout_alignTop="@id/img_icon_item_playlist_fragment"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_item_playlist_fragment"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_icon_item_playlist_fragmen"
        android:id="@+id/tv_title_item_playlist_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_end_item_playlist_fragment"
        android:layout_toEndOf="@+id/img_icon_item_playlist_fragment"
        />


</RelativeLayout>