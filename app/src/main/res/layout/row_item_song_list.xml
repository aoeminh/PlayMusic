<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:elevation="@dimen/_5sdp">
            <TextView
                android:id="@+id/tv_number_item_song_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="@dimen/_15ssp"

                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:weightSum="2"
                android:paddingLeft="@dimen/_8sdp"
                android:orientation="vertical">

                <TextView
                    android:maxLines="2"
                    android:id="@+id/tv_song_name_item_songlist"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="asfdfa"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="@dimen/_15ssp"
                    android:textColor="@color/text_color_title_playlist_fragment"
                    />
                <TextView
                    android:id="@+id/tv_singer_item_songlist"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Duyen phan"
                    android:textColor="#000"
                    android:textSize="@dimen/_13ssp"
                    android:layout_marginRight="@dimen/margin_right_song_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/im_like_item_list__song"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@drawable/iconlove"
                />


        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>