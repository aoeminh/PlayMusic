<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/img_background_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
    <View
        android:background="@drawable/custom_banner_background_color"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <RelativeLayout
        android:layout_alignBottom="@+id/img_background_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/img_icon_row_item_banner"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_toRightOf="@+id/img_icon_row_item_banner"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_margin="10dp">
            <TextView
                android:maxLines="2"
                android:id="@+id/tv_song_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Duyen phan"
                android:textStyle="bold"
                android:textColor="@color/text_color_advertise"
                />
            <TextView
                android:id="@+id/tv_song_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="Duyen phan"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_song_content"
                android:layout_marginRight="@dimen/margin_right_song_content"
                android:ellipsize="end"
                android:maxLines="3"
                />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>