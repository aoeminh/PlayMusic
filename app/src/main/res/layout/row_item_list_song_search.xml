<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:weightSum="2"
        android:paddingLeft="@dimen/_8sdp"
        android:orientation="vertical">

        <TextView
            android:maxLines="2"
            android:id="@+id/tv_song_name_item_search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="asfdfa"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/text_color_title_playlist_fragment"
            />
        <TextView
            android:id="@+id/tv_singer_item_search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Duyen phan"
            android:textColor="#000"
            android:textSize="@dimen/_13ssp"
            android:layout_marginRight="@dimen/margin_right_song_content"
            android:ellipsize="end"
            android:maxLines="1"
            />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>