<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="10"
    android:layout_marginTop="@dimen/_10sdp">

    <ImageView
        android:id="@+id/im_item_list_playlist_thumnail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:weightSum="2"
        android:paddingLeft="@dimen/_8sdp"
        android:orientation="vertical">

        <TextView
            android:maxLines="1"
            android:id="@+id/tv_name_playlist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="asfdfa"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/text_color_title_playlist_fragment"
            />
        <TextView
            android:id="@+id/tv_singer_item_list_playlist"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Duyen phan"
            android:textColor="#000"
            android:textSize="@dimen/_13ssp"
            android:layout_marginRight="@dimen/margin_right_song_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="@dimen/_8sdp"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/im_item_list_playlist_more"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="top"
        android:src="@drawable/ic_shortcut_more_vert"
        />
</LinearLayout>