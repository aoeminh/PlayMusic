<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/ln_title_playlist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_10sdp"
        >
        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_action_playlist_play"
            />

        <TextView
            android:id="@+id/tv_title_playlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_5sdp"
            android:text="@string/text_title_playlist_fragment"
            android:textColor="@color/text_color_title_playlist_fragment"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_day_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ln_title_playlist"/>



</RelativeLayout>